            box-shadow: 0px 10px 10px rgb(175, 175, 214);
            border-radius: 30px;
            
        }
        a{
            text-decoration: none;
            color: white;
            font-size: large;
            font-family: monospace;
        }
        .send-btn-container{
            margin-top: 10px;
           display: flex;
           justify-content: center;
           align-items: center;
        }
        .download-btn{
            background-color: rgb(93, 36, 168);
            padding: 8px 14px 8px 14px;
            border-radius: 5px;
        }
    </style>
    <title>Document</title>
</head>
<body>
    <h1 class="title">Sharify</h1>
    <section class="download">
        <img class="download__icon" src="../static/download.png" alt="download">
        <% if(locals.error){ %>
        <h4><%= locals.error %> üòè</h4>
        <% } else { %>
        <h2>Your file is ready to download</h2>
        <p>Link expires in 24 hours</p>
        <div class="download__meta">
            <h4><%= fileName %></h4>
            <small><%= parseInt(fileSize/1000) %> KB</small>
        </div>
        <div class="send-btn-container">
            <div class="download-btn">
                <a href="<%= downloadLink %>">Download file</a>
            </div>
        </div>
        <% } %>
    </section>
